<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<div>
   <h1>{{title}}</h1>
   <p>Welcome to {{title}}</p>
</div>
<hr>
<div>

   <form action="/addUser" method="post" name="form1">
      <table width="25%" border="0">
         <tr style="display: none;">
         	<td><input type="text" name="id" value="{{id}}" /></td>
         </tr>
         <tr>
            <td>First name</td>
            <td><input type="text" name="firstname" value="{{firstname}}" /></td>
         </tr>
         <tr>
            <td>Last name</td>
            <td><input type="text" name="lastname" id="lastname" value="{{lastname}}"/></td>
         </tr>
          <tr>
            <td>Name</td>
            <td><input type="text" name="name" value="{{name}}" /></td>
         </tr>
         <tr>
            <td>Address</td>
            <td><input type="text" name="address" value="{{address}}" /></td>
         </tr>
       
         <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="add" /></td>
         </tr>
         
      </table>

      <input type="hidden" name="_method" value="PUT" />
   </form>
</div>
<hr>
<div class = "contain">
   <div class="row">
      <div class="col-sm-3"> First name  </div>
      <div class="col-sm-3"> Last name </div>
      <div class="col-sm-1"> Name </div>
      <div class="col-sm-3"> Address </div>
      <div class="col-sm-2"> Action </div>
    </div>
    {{#each userList}}
   <div class="row">
   
   		<div class="col-sm-3"> {{this.firstname}}  </div>
	    <div class="col-sm-3"> {{this.lastname}} </div>
	    <div class="col-sm-1"> {{this.name}}</div>
	    <div class="col-sm-3"> {{this.address}} </div>
	    <div class="col-sm-1"> <a href="/editUser/{{this.id}}"><button class="btn btn-primary">Edit</button></a> </div>
	    <div class="col-sm-1"> <a href="/deleteUser/{{this.id}}"><button class="btn btn-primary">Delete</button></a> </div>

   </div>
   <hr>
   {{/each}}
      
</div>
